<div class="card" style="width: 18rem;">
  <% if @tractor.photo.attached? %>
    <%= cl_image_tag(@tractor.photo.key, class:"card-img-top") %>
  <% else  %>
    <%= image_tag "https://images.unsplash.com/photo-1530267981375-f0de937f5f13?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", class:"card-img-top" %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= @tractor.name %></h5>
    <p class="card-text"><%= @tractor.reward %>kr <br> <%= @tractor.details %></p>
    <a href="#" class="btn btn-primary">Rent this tractor</a>
  </div>
</div>

<nav class="navbar fixed-bottom navbar-light bg-light navbar-lewagon">
  <a class="navbar-brand" href="#">
    <i class="fas fa-map-marked-alt"></i>
  </a>
  <a class="navbar-brand" href="#">
    <i class="fas fa-plus"></i>
</a>
  <a class="navbar-brand" href="#">
    <img class="avatar" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
  </a>
</nav>
