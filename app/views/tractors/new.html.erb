<div class="row">
<div class="logo">
  <%= image_tag("tractorlogo.png", height: '100%', width: '100%')%>
  </div>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
      <div class="col">
        <%= simple_form_for @tractor do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :reward %>
          <%= f.input :details %>
          <%= f.input :photo, as: :file %>
          <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
        <div>
          <%= link_to "Back", root_path, class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
