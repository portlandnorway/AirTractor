<h1>Tractors availeble for pickup</h1>

<div class="container">
  <div class="row">

    <% @tractors.each do |tractor| %>

    <div class="col-md-4">

      <div class="card-product card-adjustments">
        <% if tractor.photo.attached? %>
        <%= cl_image_tag tractor.photo.key %>
        <% else %>
        <img src="https://images.unsplash.com/photo-1530267981375-f0de937f5f13?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="">
        <% end %>
        <div class="card-product-infos">
          <h2><%= link_to tractor.name, tractor %></h2>
          <h3><%= tractor.reward %> kr</h3>
          <%= tractor.details.each do |detail| %>
          <p><%= tractor.detail %> kr</p>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<nav class="navbar fixed-bottom navbar-light bg-light navbar-lewagon">
  <a class="navbar-brand" href="#">
    <i class="fas fa-map-marked-alt"></i>
  </a>
  <a class="navbar-brand" href="#">
    <i class="fas fa-plus"></i>
</a>
  <a class="navbar-brand" href="#">
    <img class="avatar" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
  </a>
</nav>
