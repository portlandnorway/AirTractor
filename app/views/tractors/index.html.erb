<h1>This is a list of all the tractors</h1>

<div class="container">
  <div class="row">
    <% @tractors.each do |c| %>
    <div class="col-md-4">

      <div class="card-product card-adjustments">
        <% if c.photo.attached? %>
        <%= cl_image_tag c.photo.key %>
        <% else %>
        <img src="https://images.unsplash.com/photo-1530267981375-f0de937f5f13?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="">
        <% end %>
        <div class="card-product-infos">
          <h2><%= link_to c.name, c %></h2>
          <p><%= c.description %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<nav class="navbar fixed-bottom navbar-light bg-light navbar-lewagon">
  <a class="navbar-brand" href="#">
    <i class="fas fa-map-marked-alt"></i>
  </a>
  <a class="navbar-brand" href="#">
    <i class="fas fa-plus"></i>
</a>
  <a class="navbar-brand" href="#">
    <img class="avatar" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
  </a>
</nav>
