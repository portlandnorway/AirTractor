<!-- app/views/tractors/_info_window.html.erb -->

<div class="card">
  <% if tractor.photo.attached? %>
    <%= cl_image_tag(tractor.photo.key, class:"card-img-top") %>
  <% else  %>
    <%= image_tag "https://images.unsplash.com/photo-1530267981375-f0de937f5f13?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", class:"card-img-top" %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= tractor.name %></h5>
    <p class="card-text"><%= tractor.reward %>kr <br> <%= tractor.details %></p>
    <%= link_to 'Rent this tractor', tractor_bookings_path(tractor), method: :post, class:"btn btn-primary" %>
  </div>
</div>
